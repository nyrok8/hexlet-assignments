<%= form_with model: @task do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>
    <div>
        <%= f.label :status %>
        <%= f.text_field :status %>
    </div>
    <div>
        <%= f.label :creator %>
        <%= f.text_field :creator %>
    </div>
    <div>
        <%= f.label :performer %>
        <%= f.text_field :performer %>
    </div>
    <div>
        <%= f.label :completed %>
        <%= f.text_field :completed %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>